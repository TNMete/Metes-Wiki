# -----------------------------------------------------------------------------------

zahlen = []

for _ in range(5):

    zahl = int(
        input(
            "Gib deine 5 Zahlen ein von denen du den Durchschnitt berechnet haben m√∂chtest: "
        )
    )
    zahlen.append(zahl)

summe = 0
for i in zahlen:
    summe += i

durchschnitt = summe / len(zahlen)

print(f"Die Summe deiner Zahlen ist: {summe}")
print(f"Der Durchschnitt deiner Zahlen ist: {durchschnitt}")

